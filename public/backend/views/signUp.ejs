<div class="modal fade" id="signup-modal">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h4>用户注册</h4>
      </div>
      <div class="modal-body">
        <form id="signupform" method="post" action="/api/users/signUp">
          <input type="hidden" value="0" name="roles" id="roles">
          <div class="form-group">
            <label for="">用户名：</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="输入用户名" />
          </div>
          <div class="form-group">
            <label for="">密码：</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="输入密码" />
          </div>
          <div class="form-group">
            <label for="">确认密码：</label>
            <input type="password" class="form-control" id="confirmpwd" name="confirmpwd" placeholder="重新输入密码" />
          </div>
          <div class="form-group">
            <label for="">邮箱：</label>
            <input type="text" class="form-control" id="email" name="email" placeholder="输入email地址" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <!-- <input type="submit" form="signupform" id="signupsubmit" class="btn btn-primary" value="提交"> -->
        <button class="btn btn-primary" id="signupsubmit">提交</button>
      </div>
    </div>
  </div>
</div>
