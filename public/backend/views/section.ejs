<% if(isLogin == false){ %>
	<div class="jumbotron" style="height: 200px; width: 80%; margin: 0 auto; padding:40px;">
	  <h3 style="margin-left: 80px;">欢迎来到 D5牛排后台管理系统</h3>
	  <p style="float: right; margin-right: 200px;">你好 , 请登陆</p>
	</div>
<% }else{ %>
	<div class="container" style="margin-top: 70px; width: 80%; margin: 0 auto; ">
    <table class="table table table-striped">
      <caption>
        <button id="add-jobs" class="btn btn-primary" style="float: left;">添加</button>
        <form class="form-inline">
	        <div class="input-group" style="margin-left: 60%;"  style="width: 30%;  display: block;" id='findinnamegroup'>
		      <div class="input-group-addon">名称</div>
		      <input type="text" class="form-control" id="findname">
		      <div class="input-group-addon" id='find'>查询</div>
		    </div>
		    <!--<div class="input-group" style="margin-left: 60%;" style="width: 30%; display: none;" id='findinnamegroup'>
	          <div class="input-group-addon">最低价</div>
		      <input type="text" class="form-control" id="bottom">
		      <div class="input-group-addon">最高价</div>
		      <input type="text" class="form-control" id="top">
		      <div class="input-group-addon" id='findmoney'>查询</div>
		    </div>-->
		</form>
		<!--<span id='change'>切换</span>-->
      </caption>
      <thead>
        <tr>
          <th>序号</th>
          <th>名称</th>
          <th>图片</th>
          <th>价格</th>
          <th>原价</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody id="list-con"></tbody>
    </table>
    <div class="row">
      <nav class="col-md-12 pull-right" aria-label="Page navigation">
        <ul class="pagination" id="paginationCon"></ul>
      </nav>
    </div>

    <div class="modal fade" id="addOrUpdateDialog">
      <div class="modal-dialog modal-md">
        <div class="modal-content">
          <div class="modal-header">
            <button class="close" data-dismiss="modal">&times;</button>
            <h4>列表</h4>
          </div>
          <div class="modal-body">
            <form action="/api/jobs/addOrUpdate" method="post" enctype="multipart/form-data" id="postJobForm">
              <input type="hidden" id="jobid" name="jobid" value="">
              <div class="form-group">
                <label for="name">名字</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="请输入名字">
              </div>
              <div class="form-group">
                <div id="updateLogo"></div>
                <label for="logo">图片</label>
                <input type="file" accept="image/png,image/gif,image/jpeg" class="form-control" name="logo" id="logo" placeholder="请上传照片">
              </div>
              
              <div class="form-group">
                <label for="nprice">价格</label>
                <input type="text" class="form-control" name="nprice" id="nprice" placeholder="请输入现价">
              </div>
              <div class="form-group">
                <label for="oprice">原价</label>
                <input type="text" class="form-control" name="oprice" id="oprice" placeholder="请输入原价">
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button id="submitBtn" class="btn btn-primary">提交</button>
          </div>
        </div>
      </div>
    </div>
  </div>
	
	
	
<% } %>